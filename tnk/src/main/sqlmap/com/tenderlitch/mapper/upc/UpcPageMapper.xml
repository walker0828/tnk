<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tenderlitch.mapper.upc.UpcPageMapper" >
  <resultMap id="BaseResultMap" type="com.tenderlitch.entity.upc.UpcPage" >
    <id column="SID" property="sid" jdbcType="INTEGER" />
    <result column="NAME" property="name" jdbcType="VARCHAR" />
    <result column="URL" property="url" jdbcType="VARCHAR" />
    <result column="DESCRIPTION" property="description" jdbcType="VARCHAR" />
    <result column="VERSION" property="version" jdbcType="INTEGER" />
  </resultMap>
  <sql id="Base_Column_List" >
    SID, NAME, URL, DESCRIPTION, VERSION
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from upc_page
    where SID = #{sid,jdbcType=INTEGER}
  </select>
  
  <select id="find" resultMap="BaseResultMap" parameterType="java.util.Map" >
    select 
    <include refid="Base_Column_List" />
    from upc_page
    <trim prefix="WHERE" prefixOverrides="AND">
    	<if test="name!=null and name != ''">
    		and NAME=#{name,jdbcType=VARCHAR)
    	</if>
    	<if test="url !=null and url != ''">
    		and URL=#{url,jdbcType=VARCHAR)
    	</if>
    </trim>
  </select>
</mapper>